<?xml version="1.0" encoding="utf-8"?>


<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.laviverma.intellifarm.Dashboard">

        <ImageView
            android:id="@+id/top_band"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/phone_interface_top_band" />

        <pl.bclogic.pulsator4droid.library.PulsatorLayout
            android:id="@+id/pulsator"
            android:layout_width="300dp"
            android:layout_marginBottom="20dp"
            android:layout_height="300dp"
            android:layout_alignBottom="@+id/feeling"
            android:layout_centerHorizontal="true"
            app:pulse_color="#77C47C"
            app:pulse_count="7"
            app:pulse_duration="7000"
            app:pulse_interpolator="Linear"
            app:pulse_repeat="0"
            app:pulse_startFromScratch="false"></pl.bclogic.pulsator4droid.library.PulsatorLayout>
        <me.tankery.lib.circularseekbar.CircularSeekBar
            android:id="@+id/seekbar"
            android:layout_below="@+id/toolbar2"
            android:layout_above="@+id/growth_strip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cs_circle_color = "#87B952"
            app:cs_circle_progress_color="@color/trans"
            app:cs_circle_stroke_width="13dp"
            android:visibility="gone"
            app:cs_circle_style="round"
            app:cs_pointer_color = "#37B34A"
            app:cs_pointer_halo_color = "#E45677"
            app:cs_end_angle="45"
            app:cs_negative_enabled="true"
            app:cs_pointer_stroke_width="25dp"
            app:cs_start_angle="135" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_below="@+id/top_band"
            android:background="#00000000"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar">


        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:id="@+id/growth_strip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="102dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="16.85">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.25" />

                <ProgressBar
                    android:id="@+id/progress"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:layout_weight="14.50"
                    android:progress="1"
                    android:progressDrawable="@drawable/custom_progress" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="16.85">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.25"
                    android:scaleType="fitXY"
                    android:src="@drawable/part1" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="14.50"
                    android:scaleType="fitXY"
                    android:src="@drawable/part2" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.1"
                    android:scaleType="fitXY"
                    android:src="@drawable/part3" />
            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/plant_icon"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
           />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:id="@+id/feeling"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:text="Feeling VD today" />

        <Button
            android:id="@+id/detail"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="76dp"
            android:background="#B0DB9D"
            android:text="Details" />

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:textSize="30sp"
        app:menu="@menu/drawer_menu">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
