<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.laviverma.intellifarm.Atmosphere">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
       android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:padding="2dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:text="100"
                android:textSize="30sp"
                android:textStyle="bold"
                android:id="@+id/textView1"
                android:layout_height="wrap_content"
                android:layout_above="@+id/imageView4"
                android:layout_centerHorizontal="true"
                />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"

                android:layout_alignBottom="@+id/seekbar1"
                android:layout_centerHorizontal="true"
                android:src="@drawable/noun_1002029_grey"
                android:id="@+id/imageView4" />

            <me.tankery.lib.circularseekbar.CircularSeekBar
                android:id="@+id/seekbar1"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cs_circle_color="#96b5e8"
                app:cs_circle_progress_color="#0e48a5"
                app:cs_circle_stroke_width="13dp"
                app:cs_circle_style="round"
                app:cs_disable_pointer="true"
                app:cs_end_angle="45"
                app:cs_negative_enabled="true"
                app:cs_pointer_stroke_width="25dp"
                app:cs_start_angle="135" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignBottom="@+id/seekbar2"
                android:layout_centerHorizontal="true"
                android:src="@drawable/noun_1570737_grey"/>

            <TextView
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="3423"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/imageView3"
                android:id="@+id/textView2" />

            <me.tankery.lib.circularseekbar.CircularSeekBar
                android:id="@+id/seekbar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cs_circle_color="#d8d88c"
                app:cs_circle_progress_color="#b2b200"
                app:cs_circle_stroke_width="13dp"
                app:cs_circle_style="round"
                app:cs_disable_pointer="true"
                android:layout_centerInParent="true"
                app:cs_end_angle="45"
                app:cs_negative_enabled="true"
                app:cs_pointer_stroke_width="25dp"
                app:cs_start_angle="135" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="-10dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:padding="2dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignBottom="@+id/seekbar3"
                android:layout_centerHorizontal="true"
                android:src="@drawable/noun_1506299_grey" />

            <TextView
                android:layout_width="wrap_content"
                android:text="100"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_above="@+id/imageView2"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" />

            <me.tankery.lib.circularseekbar.CircularSeekBar
                android:id="@+id/seekbar3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
             android:layout_centerInParent="true"
                android:layout_marginTop="35dp"
                app:cs_circle_color="#d77fd8"
                app:cs_circle_progress_color="#8c058e"
                app:cs_circle_stroke_width="13dp"
                app:cs_circle_style="round"
                app:cs_disable_pointer="true"
                app:cs_end_angle="45"
                app:cs_negative_enabled="true"
                app:cs_pointer_stroke_width="25dp"
                app:cs_start_angle="135" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:padding="2dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="70dp"
                android:id="@+id/image"
                android:layout_height="70dp"
                android:layout_alignBottom="@+id/seekbar4"
                android:layout_centerHorizontal="true"
                android:src="@drawable/noun_399436_grey" />

            <TextView
                android:layout_width="wrap_content"
                android:text="100"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/image"
                android:layout_height="wrap_content"
                android:id="@+id/textView4" />

            <me.tankery.lib.circularseekbar.CircularSeekBar
                android:id="@+id/seekbar4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cs_circle_color="#ff9e91"
                app:cs_circle_progress_color="#a80d0d"
                app:cs_circle_stroke_width="13dp"
                app:cs_circle_style="round"

                app:cs_disable_pointer="true"
                app:cs_end_angle="45"
                android:layout_centerInParent="true"
                app:cs_negative_enabled="true"
                app:cs_pointer_stroke_width="25dp"
                app:cs_start_angle="135" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
