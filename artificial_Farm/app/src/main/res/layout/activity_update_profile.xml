<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.laviverma.intellifarm.AddPolyHouse">

    <ImageView
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/phone_interface_top_band" />

    <ImageView
        android:layout_below="@+id/top"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="wrap_content"
        android:src="@drawable/phone_interface_transparent"
        />
    <TextView
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:id="@+id/name"
        android:layout_below="@+id/v2"
        android:textColor="#03204f"
        android:textSize="25sp" />

    <EditText
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_below="@+id/name"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        tools:text="joey@sharenofood.com"
        android:textColor="#000000"
        android:id="@+id/P_name"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/v3"
        android:visibility="gone"
        android:layout_below="@+id/P_name"
        android:layout_marginTop="15dp"
        android:background="#3C3F41" />
    <TextView
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:paddingRight="10dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_alignParentRight="true"
      android:text="SAVE"
        android:id= "@+id/save"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/top"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_back"
        android:id= "@+id/back"/>
    <TextView
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/email"
        android:layout_below="@+id/back"
        android:textColor="#03204f"
        android:textSize="25sp" />

    <EditText
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_below="@+id/email"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        tools:text="joey@sharenofood.com"
        android:textColor="#000000"
        android:id="@+id/P_email"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/v1"
        android:layout_below="@+id/P_email"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        android:background="#3C3F41" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:id="@+id/address"

        android:padding="10dp"
        android:layout_below="@+id/v1"
        android:textColor="#03204f"
        android:textSize="25sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_below="@+id/address"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:fontFamily="sans-serif-light"
        tools:text="joey@sharenofood.com"
        android:textColor="#000000"
        android:id="@+id/P_address"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:padding="10dp"
        android:id="@+id/v2"
        android:visibility="gone"
        android:layout_below="@+id/P_address"
        android:layout_marginTop="15dp"
        android:background="#3C3F41" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:padding="10dp"
        android:id="@+id/number"
        android:layout_below="@+id/v3"
        android:textColor="#03204f"
        android:textSize="25sp" />

    <EditText
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_below="@+id/number"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        tools:text="joey@sharenofood.com"
        android:textColor="#000000"
        android:id="@+id/P_number"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:layout_below="@+id/P_number"
        android:layout_marginTop="15dp"
        android:background="#3C3F41" />
</RelativeLayout>
</ScrollView>