<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.laviverma.intellifarm.Login">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/loginbackground" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/intellifarm_low" />

        <RelativeLayout
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:padding="10dp">

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/below_white_border"
                android:ems="10"
                android:hint="Email"
                android:padding="10dp"

                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textColorLink="@color/white" />

            <EditText
android:id="@+id/ePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/email"
                android:background="@drawable/below_white_border"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10dp"

                android:textColor="@color/white"
                android:textColorHint="@color/white" />
        </RelativeLayout>

        <TextView
            android:id="@+id/forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/password"
            android:padding="10dp"
            android:text="Forget Password ?"
            android:textColor="@color/blue" />

        <RelativeLayout

            android:id="@+id/logIn"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@+id/forget"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"

            android:background="@drawable/white_border">

            <Button


                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bLogIn"
                android:background="@drawable/white_border"
                android:backgroundTint="@color/green"
                android:text="Log In"
                android:textColor="@color/white" />
        </RelativeLayout>

        <TextView
            android:id="@+id/SignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logIn"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:text="New User?Sign Up Now" />

    </RelativeLayout>
</ScrollView>